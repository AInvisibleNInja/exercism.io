<form accept-charset="UTF-8" action="/submissions/<%= submission.key %>/nitpick" method="POST">

  <div class="hidden" id="encourage">
    <% if current_user.owns?(submission) %>
      <%= erb :"submissions/encourage_submitter", locals: {version: submission.version, nit_count: submission.nit_count} %>
    <% else %>
      <%= erb :"submissions/encourage_nitpicker", locals: {language: submission.problem.language} %>
    <% end %>
  </div>

  <%= erb :"submissions/comment" %>

  <button type="submit" name="nitpick" class="pull-right btn btn-primary btn-lg">
    <% if current_user.owns?(submission) || submission.exercise_completed? %>
      Submit Comment
    <% else %>
      Nitpick
    <% end %>
  </button>

  <small class="hidden-xs">
    Parsed with <a href="https://help.github.com/articles/github-flavored-markdown" target="_blank">GitHub Flavoured Markdown</a>
  </small>
</form>