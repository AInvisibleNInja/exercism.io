<h1><%= submission.language %>: <%= submission.slug %></h1>

<div class="row">
<div class="span6">
<%= Markdown.render("```#{submission.language}\n#{submission.code}\n```") %>
</div>

<div class="span6">
  <h2>Nits</h2>
  <% submission.nits.each do |nit| %>
    <blockquote>
      <%= nit.comment %>
      <br />
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <cite><em><%= nit.user.username %></em></cite>
    </blockquote>
  <% end %>
</div>
</div>

