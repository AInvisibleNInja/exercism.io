%header#section-header.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand.visible-xs{:href => link_to('/')} Exercism.io

    %nav.collapse.navbar-collapse.bs-navbar-collapse{:role => "navigation"}
      %ul.nav.navbar-nav
        %li.active
          %a{:href => link_to('/about')} About Exercism
        %li
          %a{:href => link_to('/getting-started')} Getting Started
        %li
          %a{:href => link_to('/help')} Help
      %ul.nav.navbar-nav.navbar-right
        %li
          - if current_user.guest?
            %a.sprite-icon-login{:href => link_to("/login")} Login with Github
          - else
            %a.sprite-icon-logout{:href => link_to("/logout")} Logout
